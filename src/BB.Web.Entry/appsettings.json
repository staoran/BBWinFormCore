{
  "$schema": "https://gitee.com/dotnetchina/Furion/raw/net6/schemas/v3/furion-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "_log/application.log",
                "rollingInterval": "Hour",
                "restrictedToMinimumLevel": "Information",
                "encoding": "System.Text.Encoding::UTF8",
                "outputTemplate": "{NewLine}【{Level:u3}】{Timestamp:yyyy-MM-dd HH:mm:ss.fff}{NewLine}#Msg#{Message:lj}{NewLine}#Pro #{Properties:j}{NewLine}#Exc#{Exception}--------------------------------------------------"
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{NewLine}【{Level:u3}】{Timestamp:yyyy-MM-dd HH:mm:ss.fff}{NewLine}#Msg#{Message:lj}{NewLine}#Pro #{Properties:j}{NewLine}#Exc#{Exception}--------------------------------------------------"
        }
      }
    ]
  },
  "FriendlyExceptionSettings": {
    "DefaultErrorMessage": "出现未被处理的系统异常，请联系管理员",
    "ThrowBah": true
  },
  "AllowedHosts": "*",
  "ConnectionConfigs": [
    {
      // 必填, 数据库配置唯一ID
      "ConfigId": "main",
      // 必填, 数据库连接字符串
      "ConnectionString": "Data Source=./Furion.db",
      // 必填, 数据库类型
      "DbType": "Sqlite",
      // 默认false, 时候知道关闭数据库连接, 设置为true无需使用using或者Close操作
      "IsAutoCloseConnection": true,
      // 从特性读取主键和自增列信息
      "InitKeyType": "Attribute"
    }
  ],
  "DynamicApiControllerSettings": {
    "UrlParameterization": true,
    "CamelCaseSeparator": "",
    "LowercaseRoute": false,
    "AsLowerCamelCase": true,
    "ModelToQuery": true
  },
  "CorsAccessorSettings": {
    "WithExposedHeaders": [
      "access-token",
      "x-access-token",
      "environment"
    ]
  },
  "LocalizationSettings": {
    "SupportedCultures": ["zh-CN", "en-US"],
    "DefaultCulture": "zh-CN"
  },
  "JWTSettings": {
    "ValidateIssuerSigningKey": true,
    "IssuerSigningKey": "LkHFWdaNpEkzPRLvRT8td9QR",
    "ValidateIssuer": true,
    "ValidIssuer": "BBAPI",
    "ValidateAudience": true,
    "ValidAudience": "ALLAPP",
    "ValidateLifetime": true,
    "ExpiredTime": 600,
    "ClockSkew": 5,
    "Algorithm": "HS256"
  }
}